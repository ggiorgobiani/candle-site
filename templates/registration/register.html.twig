{% extends 'base.html.twig' %}
{%block body%}
<div class="container">
<div class="row">
<div class="col-12 imgDiv">
                <img src="{{ asset('build/images/logo.png') }}" alt="logo accaunt page">
            </div>
    <class="col-md-3>

        {{ form_start(registrationForm, {
            attr: {
                novalidate: "novalidate"
            }
        }) }}

            {# Token de securit√© #}
            {{ form_widget(registrationForm._token) }}
    
            {# Email row #}
            <div class="row">
                
    
                    {# Email #}
                    <div class="mb-6">
                
                        {{ form_label(registrationForm.email.first) }}
                        {{ form_widget(registrationForm.email.first) }}
                        {{ form_help(registrationForm.email.first) }}
                        {{ form_errors(registrationForm.email.first) }}
                    </div>
    
               
                
    
                    {# Email Confirmation #}
                    <div class="mb-6">
                        {{ form_label(registrationForm.email.second) }}
                        {{ form_widget(registrationForm.email.second) }}
                    </div>
                    <div class="mb-6">
                        {{ form_help(registrationForm.email.second) }}
                        {{ form_errors(registrationForm.email.second) }}
                    </div>
    
                
            </div>
    
            {# Password row #}

                <div class="col-mb-3">
                    {# Password #}
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_help(registrationForm.plainPassword.first) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                </div>
                <div class="col-mb-3">
                    {# Password Confirmation #}
                    {{ form_label(registrationForm.plainPassword.second) }}
                    {{ form_widget(registrationForm.plainPassword.second) }}
                    {{ form_help(registrationForm.plainPassword.second) }}
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>
            
    
            {# Firstname #}
            <div class="mb-3">
                {{ form_label(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname) }}
                {{ form_help(registrationForm.firstname) }}
                {{ form_errors(registrationForm.firstname) }}
            </div>
            
            
            {# Lastname #}
            <div class="mb-3">
                {{ form_label(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname) }}
                {{ form_help(registrationForm.lastname) }}
                {{ form_errors(registrationForm.lastname) }}
            </div>
            
                
                {# Phone #}
            <div class="mb-3">
                {{ form_label(registrationForm.phone) }}
                {{ form_widget(registrationForm.phone) }}
                {{ form_help(registrationForm.phone) }}
                {{ form_errors(registrationForm.phone) }}

            </div>
                
                {# Street #}
            <div class="mb-3">
                {{ form_label(registrationForm.street) }}
                {{ form_widget(registrationForm.street) }}
                {{ form_help(registrationForm.street) }}
                {{ form_errors(registrationForm.street) }}
            </div>

             <div class="mb-3">
                {{ form_label(registrationForm.streetNumber) }}
                {{ form_widget(registrationForm.streetNumber) }}
                {{ form_help(registrationForm.streetNumber) }}
                {{ form_errors(registrationForm.streetNumber) }}
            </div>
                
                {# Zip #}
            <div class="mb-3">
                {{ form_label(registrationForm.zip) }}
                {{ form_widget(registrationForm.zip) }}
                {{ form_help(registrationForm.zip) }}
                {{ form_errors(registrationForm.zip) }}
            </div>
                
                {# City #}
            <div class="mb-3">
                {{ form_label(registrationForm.city) }}
                {{ form_widget(registrationForm.city) }}
                {{ form_help(registrationForm.city) }}
                {{ form_errors(registrationForm.city) }}
            </div>
            
            {# Country #}
            <div class="mb-3">
                {{ form_label(registrationForm.country) }}
                {{ form_widget(registrationForm.country) }}
                {{ form_help(registrationForm.country) }}
                {{ form_errors(registrationForm.country) }}
            </div>
               
            {# AgreeTerms #}
            {% if registrationForm.agreeTerms is defined %}
            <div class="mb-3">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_help(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            {% endif %}
            
            <button type="submit" class="btn btn-lg btn-primary">Inscription</button>
    
        {{ form_end(registrationForm, {
            render_rest: false
        }) }}
        </div>

    </div>
</div>
 {% endblock %}