{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<div class="account-page" data-controller="account">
    <div class="container">
        <div class="row">
            <div class="col-6 imgDiv">
                <img src="{{ asset('build/images/logo.png') }}" alt="logo accaunt page">
            </div>
            <div class="col-6" id="accFormDiv">
                <div class="form-container">
                    <div class="form-btn">
                        <span data-action="click->account#showLogin">Connexion</span>
                        <span data-action="click->account#showReg">Inscription</span>
                        <hr id="indicator">
                    </div>
                    <form id="loginForm">
                        <input type="text" placeholder="username">
                        <input type="password" placeholder="password">
                        <button type="submit" class="btnConnection">Connexion </button>
                        <a href="">Mot de pass oubli√©?</a>
                    </form>
                    <form id="regForm">
                        <input type="text" placeholder="username">
                        <input type="email" placeholder="Email">
                        <input type="password" placeholder="password">
                        <button type="submit" class="btnInscription">Inscription </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
            {{ encore_entry_script_tags('account') }}
            {{ parent() }}
        {% endblock %}
