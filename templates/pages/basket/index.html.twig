{% extends 'base.html.twig' %}

{% block title %}Hello BasketController!{% endblock %}

{% block body %}
<div class="container mainDiv">
   <table>
    <thead>
        <tr>
            <th>Produit</th>
            <th>Quantit√©</th>
            <th>Prix unitaire</th>
            <th>Prix total</th>
        </tr>
    </thead>
    <tbody>
        {% for item in dataBasket %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.price * item.quantity }}</td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td>{{ total }}</td>
        </tr>
    </tfoot>
</table>
