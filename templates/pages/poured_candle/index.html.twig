{% extends 'base.html.twig' %}

{% block title %}PouredCandle index{% endblock %}

{% block body %}
    <h1>Bougies coul√©es</h1>


 <div class="row row-cols-3">
  {% for poured_candle in poured_candles %}
    <div class="col" data-controller="pouredCandle">
      <div class="card pouredCard my-4">
        <img class="card-img-top" src="/uploads/{{ poured_candle.image }}" alt="Candle Image">
        <div class="card-body">
          <h4 class="card-title">Collection: {{ poured_candle.name }}</h4>
          {# <p class="card-text">Description: {{ poured_candle.description }}</p> #}
          <p class="card-text">Price: {{ poured_candle.price }}</p>
          <a href="{{ path('app_poured_candle_show', {'id': poured_candle.id}) }}" class="btn btn-primary">Show Details</a>
          <a href="{{ path('app_poured_candle_edit', {'id': poured_candle.id}) }}" class="btn btn-secondary">Edit</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<a class="btn btn-secondary" href="{{ path('app_poured_candle_new') }}">Create new</a>
{% endblock %}




          {% block javascripts %}
